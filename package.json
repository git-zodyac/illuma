{
  "name": "@zodyac/illuma",
  "description": "A lightweight, type-safe dependency injection container for anything, inspired by Angular's DI system",
  "author": "bebrasmell",
  "repository": {
    "type": "git",
    "url": "https://github.com/git-zodyac/illuma"
  },
  "version": "1.6.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./testkit": {
      "types": "./dist/testkit.d.ts",
      "import": "./dist/testkit.js",
      "require": "./dist/testkit.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins.d.ts",
      "import": "./dist/plugins.js",
      "require": "./dist/plugins.cjs"
    }
  },
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "di",
    "dependency",
    "injection",
    "container",
    "angular",
    "electron",
    "ioc",
    "inversify",
    "typescript",
    "decorators",
    "service",
    "provider",
    "module",
    "inversion-of-control"
  ],
  "scripts": {
    "test": "jest",
    "test:badges": "jest --coverage && make-coverage-badge --report-path ./artifacts/coverage/coverage-summary.json --output-path ./badges/coverage.svg",
    "build": "tsup",
    "lint": "biome check",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@swc/core": "1.15.3",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "jest": "30.2.0",
    "make-coverage-badge": "1.2.0",
    "tsup": "8.5.1",
    "typescript": "5.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
