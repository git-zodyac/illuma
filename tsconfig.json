{
  "compileOnSave": true,
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "rootDir": "src",
    "module": "node16",
    "target": "ES2022",
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "dist", "tsup.config.ts", "node_modules"]
}
