{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 90
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noConstructorReturn": "off",
        "noUnusedImports": "error"
      },
      "style": {
        "noNamespace": "off"
      },
      "complexity": {
        "noForEach": "warn",
        "noUselessCatch": "error",
        "noStaticOnlyClass": "off"
      },
      "suspicious": {
        "useAwait": "warn",
        "noExplicitAny": "off"
      }
    }
  },
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.js"],
    "ignoreUnknown": true
  }
}
